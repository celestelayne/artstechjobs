<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Log In</h1>
		<%= simple_form_for @user, url: "/sessions", method: "post" do |f| %>
		  <%= f.input :email, placeholder: "user@domain.com" %>
		  <%= f.input :password %>
		  <%= f.button :button, "Log In" %>
		<% end %>
		<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
	</div>
</div>