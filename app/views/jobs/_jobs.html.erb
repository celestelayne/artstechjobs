	<% @jobs.each do |job| %>
		<div class="job grid-item isotope-item grid-sizer <%= job.tags[0].name %>">
			<span class="grid-date"><small>Posted <em><%= time_ago_in_words(job.created_at) %></em> ago</small></span>
			<h3 class="grid-header"><%= link_to job.title, job.url %></h3>
			<h4 class="grid-company"><%= job.company %></h4>
			<p class="grid-city"><%= job.city %></p>
			<p class="grid-tags"><%= raw job.all_tags %></p>

				<footer>
					<% if @current_user %>
						<ul>
							<li class="pull-left">
								<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
								<%= link_to "Edit job", edit_job_path(job.id) %>
							</li>
							<li class="pull-right">
								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>

								<%= link_to "Delete job", job_path(job.id), :method => :delete, data: { confirm: 'Are you sure?' } %>
							</li>
						</ul>
					<% end %>
				</footer>

		</div>
	<% end %>