<div id="masonry-container" class="grid">
	<% @jobs.each do |job| %>
		<div class="job grid-item grid-sizer <%= job.tags[0].name %>">
			<h3 class="grid-header"><%= link_to job.title, job.url %></h3>
			<h4 class="grid-company"><%= job.company %></h4>
			<p class="grid-city"><%= job.city %></p>
			<p class="grid-tags"><%= raw job.all_tags %>
				<!-- <span>Posted <%= time_ago_in_words(job.created_at) %> ago.</span> -->
			</p>

				<footer>
					<% if @current_user %>
						<ul>
							<li class="pull-left">
								<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
								<%= link_to "Edit job", edit_job_path(job.id) %>
							</li>
							<li class="pull-right">
								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
								<%= link_to "Delete job", job_path(job.id), method: :destroy, data: { confirm: 'Are you sure?' } %>
							</li>
						</ul>
					<% end %>
				</footer>

		</div>
	<% end %>
</div>

<div class="section-footer">
	<ul class="footer-nav">
		<li class="pull-left"><%= paginate @jobs %></li>
		<li class="pull-right">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			<span><%= link_to "Add a new job", new_job_path %></span>
		</li>
	</ul>
</div>



