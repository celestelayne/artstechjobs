<div id="masonry-container" class="grid">
	<% @jobs.each do |job| %>
		<div class="job grid-item grid-sizer <%= job.tags[0].name %>">
			<h3 class="grid-header"><%= link_to job.title, job.url %></h3>
			<h4 class="grid-company"><%= job.company %></h4>
			<p class="grid-city"><%= job.city %></p>
			<p class="grid-tags"><%= raw tag_links(job.all_tags) %></p>
			<footer>

					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<%= link_to "Edit job", edit_job_path(job.id) %>

					<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					<%= link_to "Delete job", job, method: :delete, data: { confirm: 'Are you sure?' } %>

			</footer>

		</div>
	<% end %>
</div>
<p><%= paginate @jobs %></p>
<div class="section-footer">
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
		<%= link_to "Add a new job", new_job_path %>
</div>



